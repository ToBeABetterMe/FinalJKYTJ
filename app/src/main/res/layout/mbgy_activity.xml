<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mbackground" >

    <TextView
        android:layout_width="350dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/chronicdisease" />

    <LinearLayout
        android:layout_width="1000dp"
        android:layout_height="520dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:background="@drawable/mbgy_bk" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/mbgy_btn_gxysfjh"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="170dp"
                android:background="@drawable/gxysf_btn"
                android:onClick="jumpActivity" />

            <Button
                android:id="@+id/mbgy_btn_gxysfjl"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/gxyxx_btn"
                android:onClick="jumpActivity" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/mbgy_btn_tnbsfjh"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="170dp"
                android:background="@drawable/tnbsf_btn"
                android:onClick="jumpActivity" />

            <Button
                android:id="@+id/mbgy_btn_tnbsfjl"
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/tnbxx_btn"
                android:onClick="jumpActivity" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>