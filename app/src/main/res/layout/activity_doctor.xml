<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dochelp" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="800dp"
        android:layout_height="406dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="151dp"
        android:layout_marginRight="108dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/area_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行政机构名称："
            android:textSize="35sp" />

        <TextView
            android:id="@+id/area_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="行政机构代码："
            android:textSize="35sp" />

        <TextView
            android:id="@+id/org_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医疗机构名称："
            android:textSize="35sp" />

        <TextView
            android:id="@+id/org_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医疗机构代码："
            android:textSize="35sp" />

        <TextView
            android:id="@+id/doc_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医生名字：      "
            android:textSize="35sp" />

        <TextView
            android:id="@+id/doc_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="医生代码：      "
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_setDoc"
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_marginLeft="65dp"
        android:background="@drawable/adoc"
       
        android:textSize="35sp" />

    <Button
        android:id="@+id/btn_setOrg"
         android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/linearLayout1"
        android:layout_alignLeft="@+id/btn_setDoc"
        android:layout_marginBottom="53dp"
      
        android:background="@drawable/aorg"
        android:textSize="35sp" />

</RelativeLayout>