            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/tv_qzrq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确诊日期："
                    android:textColor="@color/text_color_black"
                    android:textSize="25.0sp" />

                <EditText
                    android:id="@id/HypertensionSpecial_et_diagnoseDate"
                    style="@style/edit_text_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/tv_qzysdm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确诊医生代码："
                    android:textColor="@color/text_color_black"
                    android:textSize="25.0sp" />

                <EditText
                    android:id="@id/HypertensionSpecial_et_diagnoseDoctorCode"
                    style="@style/edit_text_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/tv_ssy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收缩压："
                    android:textColor="@color/text_color_black"
                    android:textSize="25.0sp" />

                <EditText
                    android:id="@id/HypertensionSpecial_et_SBP"
                    style="@style/edit_text_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/tv_jgdm01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="血压分级："
                    android:textColor="@color/text_color_black"
                    android:textSize="25.0sp" />

                <EditText
                    android:id="@id/HypertensionSpecial_et_bloodPressureLevel"
                    style="@style/edit_text_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
