        android:layout_marginTop="100.0dip"
        android:background="@drawable/sbackground1" >

        <LinearLayout
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60.0dip"
            android:layout_weight="2.0"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/tv_xm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名："
                    android:textColor="@color/text_color_black"
                    android:textSize="25.0sp" />

                <EditText
                    android:id="@id/HypertensionSpecial_et_name"
                    style="@style/edit_text_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/tv_tnbzsbh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="糖尿病专属编号："
                    android:textColor="@color/text_color_black"
                    android:textSize="25.0sp" />

                <EditText
                    android:id="@id/HypertensionSpecial_et_specialNo"
                    style="@style/edit_text_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/tv_jddwdm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建档单位代码："
                    android:textColor="@color/text_color_black"
                    android:textSize="25.0sp" />

                <EditText
                    android:id="@id/HypertensionSpecial_et_registerOrgCode"
                    style="@style/edit_text_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/tv_jdrxm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建档人姓名："
                    android:textColor="@color/text_color_black"
                    android:textSize="25.0sp" />

                <EditText
                    android:id="@id/HypertensionSpecial_et_registerDoctorName"
                    style="@style/edit_text_style"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@id/tv_qzdwdm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确诊单位代码："
                    android:textColor="@color/text_color_black"
