<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mzyl_bk"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="150dp" >

        <Button
            android:id="@+id/jiezhen_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@drawable/jiezhen_button" />

        <Button
            android:id="@+id/zhuanzhen_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="@drawable/zhuanzhen_button" />

        <Button
            android:id="@+id/yuancheng_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="@drawable/ycfw_button" />

        <Button
            android:id="@+id/add_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginLeft="6dp"
            android:layout_weight="1"
            android:background="@drawable/mzyl_add_button" />
    </LinearLayout>

    <ListView
        android:id="@+id/record_listview"
        android:layout_width="1200dp"
        android:layout_height="450dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="210dp"
        android:background="@drawable/sbackground1" />

</RelativeLayout>