<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 按钮可用，并且处于聚焦状态时显示这个状态 -->
    <item android:drawable="@drawable/curveafter" android:state_focused="true"/>
    <!-- 被选中时显示这个状态 -->
    <item android:drawable="@drawable/curveafter" android:state_selected="true"/>
    <!-- 按钮不可用状态时显示这个状态 -->
    <item android:drawable="@drawable/curveafter" android:state_enabled="false"/>
    <!-- 按钮可用，并且处于正常状态时显示这个状态 -->
    <item android:drawable="@drawable/curvebefore"/>

</selector>