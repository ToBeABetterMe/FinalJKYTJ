<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_main_ui"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="80dp"
        android:paddingLeft="180dp"
        android:paddingRight="180dp"
        android:paddingTop="110dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:onClick="jumpTo"
            android:orientation="vertical" >

            <Button
                android:id="@+id/main_btn_ywgl"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/ywgl_button"
                android:onClick="jumpTo" />

            <Button
                android:id="@+id/main_btn_zygl"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/zygl_button"
                android:onClick="jumpTo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="150dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <Button
                android:id="@+id/main_btn_mbgy"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/mbgy_button"
                android:onClick="jumpTo" />



            <Button
                android:id="@+id/main_btn_xtwh"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/xtwh_button"
                android:onClick="jumpTo" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>